@using Sandbox;
@using Sandbox.UI;
@using System;
@using System.Collections.Generic;
@using System.Linq;

@namespace MyGame
@inherits RootPanel
@attribute [StyleSheet]
@code{
    public Pawn Pawn;
    private string killcount => Pawn.sc.Kills.ToString();
    private string Killshud()
    {

            return killcount;
            Log.Info(killcount);
    }
}
<style>
    LBords{
        display:flex;
        flex-direction:column;
        justify-content:center;
        align-items:center;
    }
    .KillText{
        font-size:32px;
        color:navajowhite;
        text-stroke:5px black;

    }
</style>
<root>
   <panel class="KillText">
        @Killshud()
    </panel>
</root>

@code{
    protected override int BuildHash()
    {
        return HashCode.Combine(Killshud);
    }
}